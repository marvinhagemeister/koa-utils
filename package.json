{
  "name": "koa-utils",
  "version": "0.0.1",
  "description": "Various utils for koa",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "keywords": ["koa", "rest", "middleware"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/koa-utils.git"
  },
  "scripts": {
    "cleanup": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts' 'src/**/*.tsx'",
    "watch": "tsc -w",
    "build": "npm run cleanup && tsc",
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "prepublishOnly": "npm run lint && npm t && npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/koa": "^2.0.39",
    "koa": "^2.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.3.2",
    "chai": "^4.0.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.1",
    "mocha": "^3.3.0",
    "nyc": "^11.0.3",
    "prettier": "^1.5.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "tslint-config-sevenval": "^0.6.3",
    "typescript": "^2.4.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --trailing-comma=all --write",
      "npm run lint",
      "git add"
    ]
  },
  "nyc": {
    "include": ["src/*.ts", "src/**/*.ts"],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [".ts"],
    "require": ["ts-node/register"],
    "reporter": ["json", "html", "text", "text-summary", "lcovonly"],
    "all": true
  }
}
